<% provide(:page_title, @post.title)%>
<p id="notice"><%= notice %></p>

<div class="container p-3">
  <div class="row">
    <div class="col-12 text-center">
      <%= link_to 'Edit', edit_post_path(@post), class:'btn btn-btn' %> |
      <%= link_to 'Back', posts_path,  class:'btn btn-btn' %>
    </div>
  </div>
</div>

<section class="section mt-5">
  <div class="row">
    <div class="col-md-6">
      <div>
        <img alt="Web Studio" class="img-fluid" src="<%= @post.banner_image_url %> " />
      </div>
      <div>
        <%= @post.comments.count %>
        <%= render @post.comments %>
        <h5>Participe here: </h5>
        <%= render 'comments/form' %>
      </div>
    </div>

    <div class="col-md-6 ml-auto">
      <div>
        <h1 class='text-center'>
          <%= @post.title %>
        </h1>
        <p class="text-center  text-muted"> <%= @post.published_date%></p>
        <p class='text-justify mt-2'>
          <%= @post.body %>
        </p>
      </div>
    </div>
  </div>
</section>
